<h1>Clientes</h1>
<a href="./clientes/novo" class="btn btn-primary">Novo</a>
<hr>
<table class="table" id="clientes">
    <thead> {{!-- Títulos da tabela --}}
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Sexo</th>
            <th>Telefone</th>
            <th></th>
        </tr>
    </thead>
    <tbody> {{!-- Conteúdo da tabela --}}
        {{#each listaClientes}} {{!-- "For" do Handlebars --}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.nome}}</td>
            <td>{{this.endereco}}</td>
            <td>{{this.sexo}}</td>
            <td>{{this.telefone}}</td>
            <td><a href="/clientes/alterar/{{this.id}}" class="btn btn-warning">Alterar</a>
                <buttom class="btn btn-danger js-delete" data-id="{{this.id}}">Excluir</buttom>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="modal" tabindex="-1" id="confirmModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Excluir cliente</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Tem certeza que deseja excluir este cliente?.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" id="btnExcluir">Excluir</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/jquery.min.js"></script>
<script src="/public/site.js"></script>